<UserControl x:Class="Level5ResourceEditor.Views.Editor.Level5ResourceMainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:panels="clr-namespace:Level5ResourceEditor.Views.Panels"
             xmlns:dataGrids="clr-namespace:Level5ResourceEditor.Views.DataGrids"
             xmlns:scene3d="clr-namespace:StudioElevenLib.Level5.Resource.Types.Scene3D;assembly=StudioElevenLib"
             xmlns:types="clr-namespace:StudioElevenLib.Level5.Resource.Types;assembly=StudioElevenLib"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Data templates for different element types -->
        <DataTemplate DataType="{x:Type types:RESElement}">
            <panels:RESElementPropertiesPanel/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type scene3d:RESTextureData}">
            <panels:RESTextureDataPropertiesPanel/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type scene3d:XRESTextureData}">
            <panels:XRESTextureDataPropertiesPanel/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type scene3d:ResMaterialData}">
            <panels:ResMaterialDataPropertiesPanel/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Border Style="{StaticResource PanelBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="45*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="30*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Panel: Tab Control with Scene3D and Scene2D -->
                <Border Grid.Column="0" Style="{StaticResource PanelBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Tab Headers -->
                        <Border Grid.Row="0" Style="{StaticResource TabContainerStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="Scene3DTab" Style="{StaticResource TabItemStyle}" MouseLeftButtonDown="TabClick">
                                    <TextBlock Text="Scene3D" Style="{StaticResource TabTextStyle}" />
                                </Border>

                                <Border x:Name="Scene2DTab" Style="{StaticResource TabItemStyle}" MouseLeftButtonDown="TabClick">
                                    <TextBlock Text="Scene2D" Style="{StaticResource TabTextStyle}" />
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Tab Content -->
                        <Grid Grid.Row="1" x:Name="TabContentGrid">
                            <!-- Scene3D Content -->
                            <Grid x:Name="Scene3DContent" Visibility="Visible">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Material Items DataGrid -->
                                <Border Grid.Row="0" Style="{StaticResource PanelBorderStyle}">
                                    <dataGrids:MaterialItemsDataGridView DataContext="{Binding}"/>
                                </Border>

                                <!-- Node Items DataGrid -->
                                <Border Grid.Row="1" Style="{StaticResource PanelBorderStyle}">
                                    <dataGrids:NodeItemsDataGridView DataContext="{Binding}"/>
                                </Border>
                            </Grid>

                            <!-- Scene2D Content (TODO) -->
                            <Grid x:Name="Scene2DContent" Visibility="Collapsed">
                                <TextBlock Text="Scene2D - Coming Soon" 
                                          Style="{StaticResource ImaginationLabel}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1" Style="{StaticResource ImaginationGridSplitter}"/>

                <!-- Center Panel: Elements DataGrid -->
                <Border Grid.Column="2" Style="{StaticResource PanelBorderStyle}">
                    <dataGrids:ElementsDataGridView DataContext="{Binding}"/>
                </Border>

                <GridSplitter Grid.Column="3" Style="{StaticResource ImaginationGridSplitter}"/>

                <!-- Right Panel: Properties -->
                <Border Grid.Column="4" Style="{StaticResource PanelBorderStyle}">
                    <ContentControl Content="{Binding SelectedElement}">
                        <ContentControl.Style>
                            <Style TargetType="ContentControl">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedElement}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>